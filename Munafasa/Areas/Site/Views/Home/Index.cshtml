                    <p>@Html.Raw(Model.VisionEn)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="boxRateUs-1">
                    <img src="~/css/site/imgs/Group 26 (1).png" alt="">
                    <h6 class="f-b">Our Mission</h6>
                    <p>@Html.Raw(Model.MissionEn)</p>
                </div>
            </div>
        </div>
        @*<div class="row justify-content-center my-5">
            <div class="col-lg-7">
                <div class="mb-4">
                    <h6 class="f-b mb-3 text-center">Our Morals</h6>
                </div>
            </div>
        </div>

        <swiper class="config">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    @foreach (var moral in Model.Morals)
                    {
                        <div class="boxRateUs-2">
                            <img src="~/@moral.Image" />
                            <h6 class="f-b m-0">@moral.NameEn</h6>
                            <p class="gray-color">@moral.DesEn</p>
                        </div>
                    }

                </div>
            </div>
            <div class="swiper-pagination"></div>
        </swiper>*@
    </div>
</section>



<section class="sec-marg" id="services">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="mb-4">
                    <h5 class="f-b mb-3 text-center">Our Services</h5>
                </div>
            </div>
        </div>

        <div class="allserveses">
            <div class="row align-items-center flex-wrap-reverse">
                @for (int i = 0; i < Model.Services.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                        <div class="col-lg-6">
                            <div>
                                <h6 class="f-b mb-3">@Model.Services[i].NameEn</h6>
                                <p>@Html.Raw(Model.Services[i].DesEn)</p>
                            </div>
                        </div>
                        <div class="col-lg-6" style="margin-top:40px">
                            <img src="~/@Model.Services[i].ImageUrl" style="max-height: 300px; border-radius: 20px" alt="" class="img-fluid">
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-6" style="margin-top:40px">
                            <img src="~/@Model.Services[i].ImageUrl" style="max-height: 300px; border-radius: 20px" alt="" class="img-fluid">
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <h6 class="f-b mb-3">@Model.Services[i].NameEn</h6>
                                <p>@Html.Raw(Model.Services[i].DesEn)</p>
                            </div>
                        </div>

                    }
                }

            </div>

                    </div>

    </div>
</section>


<section class="sec-marg" id="helpCenter">

    <div class="sec-padd pb-0 po_R" id="askService">
        <img src="~/css/site/imgs/contact us En.png" class="imgcontentcover">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="py-3 text-white">
                        <h2>Book your service now!</h2>
                        <h4>And get all kinds of solutions from the competing company</h4>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-content form-call">
                        <div class="mb-4">
                            <h5 class="mb-2">Book your service now!</h5>
                            <p>
                                We are happy to help you. If you have an inquiry, you can contact us and book your service, and our team will respond as soon as possible
                            </p>
                        </div>
                        <form method="post" asp-action="Index">
                            <div class="form-group mt-3">
                                <label asp-for="ContactUs.Name"></label>
                                <input type="text" asp-for="ContactUs.Name" class="form-control mt-2" >
                                <span asp-validation-for="ContactUs.Name" class="text-danger"></span>
                            </div>


                            <div class="form-group mt-3">
                                <label asp-for="ContactUs.Email"></label>
                                <input type="text" asp-for="ContactUs.Email" class="form-control mt-2">
                                <span asp-validation-for="ContactUs.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3">
                                <label asp-for="ContactUs.Message"></label>
                                <textarea class="form-control mt-2" asp-for="ContactUs.Message"></textarea>
                                <span asp-validation-for="ContactUs.Message" class="text-danger"></span>
                            </div>


                            <button type="submit" class="btn-main btn-main-w mb-0">
                               Send
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


