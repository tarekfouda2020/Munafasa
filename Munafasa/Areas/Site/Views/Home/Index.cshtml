    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <a href="" class="the_logo"><img src="~/css/site/imgs/Munafasa logo 1.png"></a>
            <ul class="nav_bar">
                <li><a href="#header"><i class="fas fa-home" placement="top"></i> <span>Home</span></a></li>
                <li><a href="#services"><i class="far fa-user" placement="top"></i> <span>Services</span></a></li>
                <li><a href="#helpCenter"><i class="fas fa-server" placement="top"></i> <span>Help Center</span></a></li>
            </ul>
            <div class="d-flex align-items-center">
                    @*<ul class="top_link">
                        <li>
                            <button type="button" class="btn-main btn-lang" (click)="changeCurentLang(lang === 'ar' ? 'en' : 'ar')">{{lang === 'ar' ? 'en' : 'ar'}}</button>
                        </li>
                    </ul>*@
                </div>
        </div>
    </div>
</header>


<section class="sec-marg">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="mb-3">
                    <h1 class="f-b mb-4">Munafasa for cleaning and maintenance</h1>
                    <p class="mb-3 gray-color">@Html.Raw(Model.CompanyInfoEn)</p>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="imgIntroduction">
                    <img src="~/@Model.Image" class="img1">
                </div>
            </div>
        </div>
    </div>
</section>


<section class="sec-marg" id="aboutUs">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div>
                    <h6 class="f-b mb-3 text-center">About Us</h6>
                    <p class="gray-color mb-3 text-center">@Html.Raw(Model.AboutEn)</p>
                </div>
            </div>
        </div>
    </div>

    <span class="mouse"></span>

</section>


<section class="sec-marg po_R" id="rateUs">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="boxRateUs-1">
                    <img src="~/css/site/imgs/Group 26.png" alt="">
