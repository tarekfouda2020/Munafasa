@using Munafasa.Models.Tables
@model Client
@{
    ViewData["Title"] = "Client Details";
    ViewData["PageSlug"] = "Clients";
    ViewData["Back"] = "/Admin/Client";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h4 class="card-title">Client Details</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-lg-9">
                <form>
                    <fieldset class="mb-3">
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" disabled asp-for="UserName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" disabled asp-for="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone"></label>
                            <input type="text" disabled asp-for="Phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Addresss"></label>
                            <input type="text" disabled asp-for="Addresss" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Building"></label>
                            <input type="text" disabled asp-for="Building" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Floor"></label>
                            <input type="text" disabled asp-for="Floor" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Apartment"></label>
                            <input type="text" disabled asp-for="Apartment" class="form-control">
                        </div>

                        <div class="form-group">
                            <label asp-for="Contract">Contract Number</label>
                            <input type="text" disabled asp-for="Contract" class="form-control" value="@Model.Contract.ContractNumber">
                        </div>

                        <div class="form-group">
                            <label for="ContractName">Contract Name</label>
                            <input type="text" disabled id="ContractName" class="form-control" value="@Model.Contract.NameEn">
                        </div>

                        <div class="form-group">
                            <label for="ContractOwner">Owner</label>
                            <input type="text" disabled id="Owner" class="form-control" value="@Model.Contract.Owner.UserName">
                        </div>

                        <div class="form-group">
                            <label asp-for="Requests">Number of requests</label>
                            <input type="text" disabled asp-for="Requests" class="form-control" value="@Model.Requests.Count">
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-lg-3 mt-4">
                <div class="card">
                    <div class="card-img-actions m-1" style=" display: flex;">
                        <img class="card-img img-fluid" src="~/@Model.ProfileImage" alt="" style="height: 220px; flex-shrink: 0;">
                        <div class="card-img-actions-overlay card-img">
                            <a href="~/@Model.ProfileImage" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round" data-popup="lightbox" rel="group">
                                <i class="icon-plus3"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>







@section AdminScripts{

    <script src="\js\adminJs\plugins\forms\styling\uniform.min.js"></script>
    <script src="\js\adminJs\demo_pages\form_inputs.js"></script>
    <script src="\js\adminJs\plugins\media\fancybox.min.js"></script>
    <script src="\js\adminJs\demo_pages\gallery.js"></script>
}