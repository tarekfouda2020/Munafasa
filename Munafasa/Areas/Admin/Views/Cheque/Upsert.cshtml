@using Munafasa.Models.Tables
@model Cheque
@{
    var title = Model?.Id == 0 ? "Create" : "Update";
    ViewData["Title"] = title + " Cheque";
    ViewData["PageSlug"] = "Cheques";
    ViewData["Back"] = "/Admin/Cheque";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h4 class="card-title"> @title Cheque</h4>
    </div>

    <div class="card-body">
        <form asp-action="Upsert" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" value="@(Model?.Id)" />
            <input type="hidden" asp-for="ContractId" />

            <fieldset class="mb-3">
                <div class="form-group row">
                    <label class="col-form-label col-lg-2" asp-for="DateTime"></label>
                    <div class="col-lg-10">
                        <input type="date" asp-for="DateTime" class="form-control">
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2" asp-for="Price"></label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

            </fieldset>
            <span asp-validation-for="Errors" class="text-danger"></span>
            <div asp-validation-summary="All"></div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>







@section AdminScripts{  @{
        <partial name="_ValidationScriptsPartial" />
}

<script src="\js\adminJs\plugins\forms\styling\uniform.min.js"></script>
<script src="\js\adminJs\demo_pages\form_inputs.js"></script>
<script src="\js\adminJs\plugins\forms\selects\select2.min.js"></script>
<script src="\js\adminJs\demo_pages\form_select2.js"></script>

}