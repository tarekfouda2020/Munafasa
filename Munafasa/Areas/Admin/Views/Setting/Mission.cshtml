@using Munafasa.Models.ViewModels
@model LocalizedModel
@{
    ViewData["Title"] = "Mission";
    ViewData["PageSlug"] = "Mission";
    ViewData["Back"] = "/Admin/Dashboard";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h4 class="card-title">Mission</h4>
    </div>

    <div class="card-body">
        <form asp-action="Mission" asp-controller="Setting" enctype="multipart/form-data">

            <fieldset class="mb-3">

                <div class="card">
                    <div class="card-header header-elements-inline">
                        <label class="card-title" asp-for="Ar"></label>
                    </div>

                    <div class="card-body">
                        <textarea class="summernote input-block-level" asp-for="Ar">
                          
                        </textarea>
                        <span asp-validation-for="Ar" class="text-danger"></span>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header header-elements-inline">
                        <label class="card-title" asp-for="En"></label>
                    </div>

                    <div class="card-body">
                        <textarea class="summernote input-block-level" asp-for="En">
                          
                        </textarea>
                        <span asp-validation-for="En" class="text-danger"></span>
                    </div>
                </div>


            </fieldset>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>







@section AdminScripts{  @{
        <partial name="_ValidationScriptsPartial" />
}

<script src="\js\adminJs\plugins\forms\styling\uniform.min.js"></script>
<script src="\js\adminJs\demo_pages\form_inputs.js"></script>
<script src="\js\adminJs\plugins\editors\summernote\summernote.min.js"></script>
<script src="\js\adminJs\demo_pages\editor_summernote.js"></script>

}