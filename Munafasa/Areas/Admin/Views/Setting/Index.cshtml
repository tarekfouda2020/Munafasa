@using Munafasa.Models.ViewModels
@model SiteSettingModel
@{
    ViewData["Title"] = "Site Setting";
    ViewData["PageSlug"] = "SiteSetting";
    ViewData["Back"] = "/Admin/Dashboard";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h4 class="card-title">Site Setting</h4>
    </div>

    <div class="card-body">
        <form asp-action="Index" asp-controller="Setting" enctype="multipart/form-data">
            <input type="hidden" asp-for="Image" />

            <fieldset class="mb-3">

                <div class="form-group row">
                    <label class="col-form-label col-lg-2" for="image">Image</label>
                    <div class="col-lg-10">
                        <input type="file" class="form-control-uniform" name="image">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2" asp-for="Phone"></label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Phone" class="form-control">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2" asp-for="WhatsApp"></label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="WhatsApp" class="form-control">
                        <span asp-validation-for="WhatsApp" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2" asp-for="Email"></label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header header-elements-inline">
                        <label class="card-title" asp-for="CompanyInfoAr"></label>
                    </div>

                    <div class="card-body">
                        <textarea class="summernote input-block-level" asp-for="CompanyInfoAr">
                          
                        </textarea>
                        <span asp-validation-for="CompanyInfoAr" class="text-danger"></span>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header header-elements-inline">
                        <label class="card-title" asp-for="CompanyInfoEn"></label>
                    </div>

                    <div class="card-body">
                        <textarea class="summernote input-block-level" asp-for="CompanyInfoEn">
                          
                        </textarea>
                        <span asp-validation-for="CompanyInfoEn" class="text-danger"></span>
                    </div>
                </div>



            </fieldset>
            <span asp-validation-for="Errors" class="text-danger"></span>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>







@section AdminScripts{  @{
        <partial name="_ValidationScriptsPartial" />
}

<script src="\js\adminJs\plugins\forms\styling\uniform.min.js"></script>
<script src="\js\adminJs\demo_pages\form_inputs.js"></script>
<script src="\js\adminJs\plugins\editors\summernote\summernote.min.js"></script>
<script src="\js\adminJs\demo_pages\editor_summernote.js"></script>

}