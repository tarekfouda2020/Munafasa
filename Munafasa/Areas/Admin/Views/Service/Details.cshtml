@using Munafasa.Models.Tables
@model Service
@{
    ViewData["Title"] = "Service Details";
    ViewData["PageSlug"] = "Service";
    ViewData["Back"] = "/Admin/Service";
}


<div class="card">
    <div class="card-header header-elements-inline">
        <h4 class="card-title">Service Details</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-lg-9">
                <form>
                    <fieldset class="mb-3">
                        <div class="form-group">
                            <label asp-for="NameAr"></label>
                            <input type="text" disabled asp-for="NameAr" class="form-control">

                        </div>
                        <div class="form-group">
                            <label asp-for="NameEn"></label>
                            <input type="text" disabled asp-for="NameEn" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="TechnicianServices">Number of technician</label>
                            <input type="text" disabled id="TechnicianServices" value="@Model.TechnicianServices.Count" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="Requests">Number of Requests</label>
                            <input type="text" disabled id="Requests" value="@Model.Requests.Count" class="form-control">
                        </div>

                        <div class="card">
                            <div class="card-header header-elements-inline">
                                <label class="card-title" asp-for="DesAr"></label>
                            </div>

                            <div class="card-body">
                                @Html.Raw(Model.DesAr)
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header header-elements-inline">
                                <label class="card-title" asp-for="DesEn"></label>
                            </div>

                            <div class="card-body">
                                @Html.Raw(Model.DesEn)
                            </div>
                        </div>


                    </fieldset>
                </form>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-img-actions m-1" style=" display: flex;">
                        <img class="card-img img-fluid" src="~/@Model.ImageUrl" alt="" style="height: 220px; flex-shrink: 0;">
                        <div class="card-img-actions-overlay card-img">
                            <a href="~/@Model.ImageUrl" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round" data-popup="lightbox" rel="group">
                                <i class="icon-plus3"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>







@section AdminScripts{
    <script src="\js\adminJs\plugins\forms\styling\uniform.min.js"></script>
    <script src="\js\adminJs\demo_pages\form_inputs.js"></script>

    <script src="\js\adminJs\plugins\media\fancybox.min.js"></script>
    <script src="\js\adminJs\demo_pages\gallery.js"></script>
}